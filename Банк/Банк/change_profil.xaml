            <Button Content="Сохранить изменения" HorizontalAlignment="Left" Margin="827,24.333,0,0" Grid.Row="1" VerticalAlignment="Top" Width="320" Click="add" Height="55" FontFamily="Century Gothic" FontSize="22" Background="#FF7E6468" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Удалить профиль" HorizontalAlignment="Left" Margin="827,104.333,0,0" Grid.Row="1" VerticalAlignment="Top" Width="320" Click="Button_Click" Height="55" FontFamily="Century Gothic" FontSize="22" Background="#FF7E6468" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
