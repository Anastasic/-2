            <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="21,66.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="295" FontSize="16" Foreground="Black" Grid.Row="1"><Run Text="Введите "/><Run Text="серию и номер паспорта"/><Run Text=":"/></TextBlock>
            <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="21,118.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="250" FontSize="16" Foreground="Black" Grid.Row="1"><Run Text="Введите "/><Run Text="дату рождения"/><Run Text=":"/></TextBlock>
            <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="21,170.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="215" FontSize="16" Foreground="Black" Grid.Row="1"><Run Text="Выберите пол"/><Run Text=":"/></TextBlock>
            <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="21,222.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="250" FontSize="16" Foreground="Black" Grid.Row="1"><Run Text="Введите "/><Run Text="место жительства"/><Run Text=":"/></TextBlock>
            <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="21,275.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="250" FontSize="16" Foreground="Black" Grid.Row="1"><Run Text="Выберите "/><Run Text="статус семейного положения"/><Run Text=":"/></TextBlock>
            <TextBlock FontFamily="Century Gothic" HorizontalAlignment="Left" Margin="21,331.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="215" FontSize="16" Foreground="Black" Grid.Row="1"><Run Text="Введите "/><Run Text="почту"/><Run Text=":"/></TextBlock>
