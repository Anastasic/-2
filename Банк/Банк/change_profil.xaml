            <TextBox x:Name="pr" FontFamily="Century Gothic" HorizontalAlignment="Left" Height="32" Margin="330,426.333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" FontSize="16" TextAlignment="Center" PreviewTextInput="pa" Grid.Row="1"/>
