                <DatePicker.BorderBrush>
                    <LinearGradientBrush EndPoint="0.1,0" StartPoint="0.1,0">
                        <GradientStop Color="#FF511A29" Offset="0"/>
                        <GradientStop Color="#FF511A29" Offset="0.375"/>
                        <GradientStop Color="#FF511A29" Offset="0.375"/>
                        <GradientStop Color="#FF511A29" Offset="1"/>
                    </LinearGradientBrush>
                </DatePicker.BorderBrush>
            </DatePicker>
            <ComboBox HorizontalAlignment="Left" Margin="333,166.333,0,0" VerticalAlignment="Top" Width="370" Height="33" Grid.Row="1">
